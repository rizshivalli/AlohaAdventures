{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": "./src/",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@sagas/*": ["redux/sagas/*"],
      "@slices/*": ["redux/slices/*"],
      "@configs/*": ["configs/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@actions/*": ["redux/actions/*"]
    }
  }
}
